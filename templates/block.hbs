<select
  class="category-selection"
  onchange={{action "categoryLookup"}}
  value="target.value"
>
  {{#each categories as |category|}}
    <option class="category" value="{{category}}">{{category}}</option>
  {{/each}}
</select>

{{#if inCategory}}
  <span class="p-footnote">This URL is already in the category
    {{urls.configuredName}}, you can remove it by clicking the "Remove URL" button.</span>
{{else}}
  <span class="p-footnote">This URL is not in the category
    {{urls.configuredName}}, you can add it by clicking the "Add URL" button.</span>
{{/if}}

<div class="button-container">
  <button class="add-url" {{action "addUrl"}}>Add URL</button>
  <button class="remove-url" {{action "removeUrl"}}>Remove URL</button>
</div>